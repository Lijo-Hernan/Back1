<h1>Real time Products</h1>

<a href="/home" class="btn btn-primary button">Home</a>

<div class="mainCont">

        <div id="productCont" class="product__box"></div>

    <section class="form">
        <h2> Formulario para agregar Productos </h2>

        <form class="form__int">
            <input type="text" id="name" placeholder="Nombre">
            <input type="text" id="brand" placeholder="Marca">
            <input type="text" id="description" placeholder="Descripcion">
            <input type="number" id="price" placeholder="Precio">
            <input type="text" id="img" value="Sin Imagen">
            <input type="text" id="code" placeholder="Codigo">
            <input type="number" id="stock" placeholder="Stock">
            <input type="text" id="category" placeholder="Categoria">
            <select id="status">
                <option value="true"> Activo </option>
                <option value="false"> Inactivo </option>
            </select>
            <button type="button" id="btnEnviar" class="btn__send"> Enviar </button>
        </form>
    </section>
</div>



